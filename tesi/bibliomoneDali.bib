	title = {Soil {Microbial} {Community} {Structure} in {Diverse} {Land} {Use} {Systems}: {A} {Comparative} {Study} {Using} {Biolog}, {DGGE}, and {PLFA} {Analyses}*1 *1Project supported by the {National} {Natural} {Science} {Foundation} of {China} ({Nos}. 30671207 and 40371063).},
