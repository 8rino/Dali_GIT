	month = feb,
	year = {2013},
	keywords = {Aggregates, Conservation tillage, C sequestration, Microbial biomass, NMR spectroscopy, No-tillage, Organo-mineral complexes, Soil organic matter},
	pages = {124--134},
	file = {ScienceDirect Full Text PDF:/home/dalila/.mozilla/firefox/cx4qz54l.default/zotero/storage/T29IGX7D/Plaza et al. - 2013 - Physical, chemical, and biochemical mechanisms of .pdf:application/pdf;ScienceDirect Snapshot:/home/dalila/.mozilla/firefox/cx4qz54l.default/zotero/storage/86KTE8UF/S003807171200301X.html:text/html}
